@inherits LayoutComponentBase
@using Cansat_Dashboard.Web.Services
@inject DashboardState State
@implements IDisposable

<div class="min-h-screen bg-gray-900 text-white flex flex-col">
    <header class="bg-gray-800 border-b border-gray-700 p-4">
        <div class="container mx-auto flex justify-between items-center">
            <h1 class="text-3xl font-bold text-white font-mono tracking-wider">CANSAT DASHBOARD</h1>
            <div class="flex items-center space-x-8">
                <div class="text-center">
                    <p class="text-sm text-gray-400">Mission Time</p>
                    <p id="mission-time" class="text-2xl font-bold text-white font-mono">@State.MissionTime</p>
                </div>
                <div class="text-center">
                    <p class="text-sm text-gray-400">Battery</p>
                    <p id="battery-level" class="text-2xl font-bold text-white font-mono">@State.Battery</p>
                </div>
                <div class="text-white text-4xl cursor-pointer">
                    ☰
                </div>
            </div>
        </div>
    </header>

    <main class="flex-grow">
        @Body
    </main>
</div>

@code {
    protected override void OnInitialized()
    {
        State.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        State.OnChange -= StateHasChanged;
    }
}